<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.board.project.blockboard.mapper.BoardMapper">
    <select id="selectAllBoard" resultType="com.board.project.blockboard.dto.BoardDTO">
        SELECT * FROM Board;
    </select>
    <select id="selectCompanyNameByUserID" parameterType="string" resultType="string">
        Select company.companyName
        from Company company, Users user
        where company.companyID=user.companyID and user.userID = #{userID};
    </select>
    <select id="selectCompanyIDByUserID" parameterType="string" resultType="string">
        Select company.companyID
        from Company company, Users user
        where company.companyID=user.companyID and user.userID = #{userID};
    </select>
    <select id="selectBoardByCompanyID" parameterType="string" resultType="com.board.project.blockboard.dto.BoardDTO">
        SELECT *
        FROM Board
        WHERE companyID=#{companyID};
    </select>
    <select id="selectBoardByBoardName" parameterType="string" resultType="com.board.project.blockboard.dto.BoardDTO">
        SELECT *
        FROM Board
        WHERE boardName=#{boardName};
    </select>

    <!--추후에 디비 수정후 쿼리 변경해야됨-->
    <select id="selectPostByBoardID" parameterType="string" resultType="com.board.project.blockboard.dto.PostDTO">
        SELECT post.postID,post.userID, user.userName,post.boardID,post.companyID,post.postTitle,post.postContent,post.postRegisterTime
        FROM Post post, Users user
        WHERE post.userID = user.userID and post.boardID=#{boardID}
        ORDER BY post.postID DESC;
    </select>

    <!--게시글 id로 게시글반환-->
    <select id="selectPostByPostID" parameterType="string" resultType="com.board.project.blockboard.dto.PostDTO">
        SELECT post.postID,post.userID, user.userName,post.boardID,post.companyID,post.postTitle,post.postContent,post.postRegisterTime
        FROM Post post, Users user
        WHERE post.userID = user.userID and post.postID=#{postID}
    </select>

    <!--userid로 회원 타입 반환-->
    <select id="selectUserTypeByUserID" parameterType="string" resultType="string">
        SELECT userType
        FROM Users
        WHERE userID = #{userID};
    </select>

    <select id="maxBoardID" resultType="int">
        SELECT max(boardID)
        FROM Board;
    </select>

    <insert id="insertBoard" parameterType="com.board.project.blockboard.dto.BoardDTO">
        insert into Board values(#{boardID},#{companyID},#{boardName});
    </insert>

    <!--게시글 작성 시 선택한 게시판 ID 반환-->
    <select id="getBoardIDByComIDAndBoardName" parameterType="hashMap" resultType="com.board.project.blockboard.dto.BoardDTO">
        SELECT *
        FROM Board
        WHERE companyID=#{companyID} AND boardName=#{boardName};
    </select>

</mapper>