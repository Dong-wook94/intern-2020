<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.board.project.blockboard.mapper.PostMapper">
    <insert id="insertPost" parameterType="com.board.project.blockboard.dto.PostDTO">
        INSERT INTO Post(userID, boardID, companyID, postTitle, postContent)
        VALUES (#{userID}, #{boardID}, #{companyID}, #{postTitle}, #{postContent});
    </insert>

    <delete id="deletePostByPostID" parameterType="int">
        DELETE FROM Post
        WHERE postID=#{postID};
    </delete>

    <select id="getPostByPostID" parameterType="int" resultType="com.board.project.blockboard.dto.PostDTO">
        SELECT *
        FROM Post
        WHERE postID=#{postID};
    </select>

    <update id="updatePost" parameterType="com.board.project.blockboard.dto.PostDTO">
        UPDATE Post
        SET postTitle=#{postTitle}, postContent=#{postContent}, boardID=#{boardID}
        WHERE postID=#{postID};
    </update>
</mapper>