<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.board.project.blockboard.mapper.UserMapper">
    <select id="getUserByID" parameterType="string" resultType="com.board.project.blockboard.dto.UserDTO">
        SELECT *
        FROM Users
        WHERE userID=#{userID};
    </select>

    <select id="getUserIDByPostID" parameterType="int" resultType="int">
        SELECT userID
        FROM Post
        WHERE post.postID=#{postID}
    </select>
</mapper>